<nav class="navbar navbar-default">
    <div class="container logo">
        {{#link-to 'index' class='dwum-application-logo'}}{{/link-to}}
        {{#link-to "index" class="dwum-appliciation-brand"}}{{t "main.application_name"}}{{/link-to}}
 
        {{dwum-language-selector class="pull-right"}}
        <div class="pull-right user-menu">
            {{#if session.isAuthenticated}}
                <span class="capitalized">{{session.userProfile.name}} [{{session.userProfile.realm_role}}]</span>  
                (<a class="clickable" {{action 'invalidateSession'}}>{{t 'definitions.sign-out'}}</a>) 
            {{else}}
                {{#link-to 'login'}}
                    {{t 'definitions.sign-in'}}
                {{/link-to}}
            {{/if}}
        </div>
    </div>
    <div class="container dwum-secondary-navigation">
        <ul class="nav navbar-nav">
            {{#link-to "index" tagName="li"}}
                <a>{{t "navigation.start"}}</a>
            {{/link-to}} 
            {{#if session.userProfile.isAdmin}} 
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    {{t "navigation.users"}} <span class="caret"></span>
                </a>
                
                <ul class="dropdown-menu">
                    {{#link-to "users" tagName="li"}}
                        <a href="#">{{t "navigation.users.list"}}</a>
                    {{/link-to}}  
                    {{#link-to "users.new" tagName="li"}}
                        <a href="#">{{t "navigation.users.add"}}</a>
                    {{/link-to}} 
                </ul>
                
            </li>
            {{/if}}
      </ul> 
    </div>
</nav>
{{outlet}}